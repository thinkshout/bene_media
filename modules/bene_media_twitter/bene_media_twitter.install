<?php

/**
 * @file
 * Contains install and update routines.
 */

/**
 * Implements hook_install().
 */
function bene_media_twitter_install() {
  if (\Drupal::isConfigSyncing()) {
    return;
  }

  bene_media_twitter_update_8100();
}

/**
 * Adds media tags to the tweet type.
 */
function bene_media_twitter_update_8100() {
  _bene_media_update_add_tags('tweet');
}
